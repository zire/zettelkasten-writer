#!/bin/bash

# Test script
set -e

echo "Starting test..."

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
echo "SCRIPT_DIR: $SCRIPT_DIR"

# Test loading one file
echo "Loading menu.sh..."
source "$SCRIPT_DIR/lib/menu.sh"
echo "Menu loaded successfully"

echo "Test complete"